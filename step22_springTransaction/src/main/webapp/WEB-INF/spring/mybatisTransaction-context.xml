 <!-- myBatis의 SqlSessionFactory를 생성해준다. -->			
   <beans:bean id="sqlSessionFactory" 
   class="org.mybatis.spring.SqlSessionFactoryBean">
		<beans:property name="dataSource" ref="dataSource" />
		<beans:property name="mapperLocations" value="classpath:mapper/*Mapper.xml" /><!--  Mapper.xml 로끝나는 mpper모두 등록 -->
		<beans:property name="typeAliasesPackage" value="kosta.mvc.domain" /><!-- domain폴더안에있는 클래스들 별칭 자동만듦 - 클래스명의 첫글만 소문자!! -->
