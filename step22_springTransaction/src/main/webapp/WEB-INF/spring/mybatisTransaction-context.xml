	<!-- transaction 처리하기  -->
	<beans:bean class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
	    id="transactionManager">
	   <beans:property name="dataSource" ref="dataSource"/>
	</beans:bean>
	
